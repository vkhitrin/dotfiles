#!/usr/bin/env zsh

function __xx_preview_github_issue() {
    local GITHUB_PROJECT="${1}"
    local GITHUB_PROJECT_ISSUE="${2}"
    local GITHUB_PROJECT_ISSUE_URL="${3}"
    
    if [[ -z "${GITHUB_PROJECT}" || -z "${GITHUB_PROJECT_ISSUE}" ]]; then
        echo "Invalid issue information"
        return 1
    fi
    
    # Display issue details without comments for preview
    gh issue view --repo "${GITHUB_PROJECT}" "${GITHUB_PROJECT_ISSUE}" 2>/dev/null
}
