__xx_get_todo() {
    todo --porcelain list | \
    jq -r '
      (["LIST", "SUMMARY", "PRIORITY", "ID"] | @csv),
      (.[] |
        [
         .list,
         .summary,
         (if .priority == 1 then "high"
          elif .priority == 5 then "medium"
          elif .priority == 9 then "low"
          else "" end),
         .id] | @csv
      )
    ' | sed 's/"//g' | __xx_format_columns_ansi ','
}
