__xx_confluence_render_page() {
    local CONFLUENCE_PAGE_URL
    CONFLUENCE_PAGE_URL="${1}"
    if [ -n "${1}" ]; then
        export CONFLUENCE_USERNAME=$(security find-generic-password -s "CONFLUENCE_CLI" 2>&1 | awk -F'"' '/acct/{print $4}')
        export CONFLUENCE_PASSWORD=$(security find-generic-password -s "CONFLUENCE_CLI" -w)
        confluence-cli page get \
        "${CONFLUENCE_PAGE_URL}" | pandoc -f html -t markdown
    fi
}
