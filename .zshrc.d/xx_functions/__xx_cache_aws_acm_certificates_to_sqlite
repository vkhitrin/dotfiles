__xx_cache_aws_acm_certificates_to_sqlite() {
    source ~/.zshrc.d/xx_functions/__xx_setup_commands
    source ~/.zshrc.d/xx_functions/__xx_format_columns_ansi
    __xx_setup_commands
    source ~/.zshrc.d/xx_functions/__xx_notify

    if [ -z "${XX_CACHE_DIR}" ]; then
        __xx_notify "Environment variable XX_CACHE_DIR is not defined, quitting"
        return 1
    fi

    if [[ ! -n "${AWS_SESSION_TOKEN}" || ! -n "${AWS_VAULT}" ]]; then
        __xx_notify "AWS vault is not enabled."
        return 1
    fi

    __xx_notify "#[fg=bold]Starting to fetch AWS ACM Certificates!#[default]"

    __xx_notify "Ensuring ${XX_CACHE_DIR} directory exists"
    mkdir -p "${XX_CACHE_DIR}"
    SQLITE_DATABASE_PATH="${XX_CACHE_DIR}/aws_acm.db"

    local ACCOUNT="${AWS_VAULT}"
    local REGION="${AWS_REGION}"

    __xx_notify "Creating tables if not exist in SQLITE database"
    sqlite3 "${SQLITE_DATABASE_PATH}" "CREATE TABLE IF NOT EXISTS Certificates (account TEXT NOT NULL, region TEXT NOT NULL, certificate_arn TEXT NOT NULL, domain_name TEXT NOT NULL, cert_status TEXT NOT NULL, cert_type TEXT NOT NULL, in_use TEXT NOT NULL, UNIQUE (account, region, certificate_arn));"
    sqlite3 "${SQLITE_DATABASE_PATH}" "CREATE TABLE IF NOT EXISTS SyncLog (account TEXT NOT NULL, region TEXT NOT NULL, sync_timestamp TEXT NOT NULL, PRIMARY KEY (account, region));"

    if [ -n "${SQLITE_WIPE_DATA}" ]; then
        __xx_notify "Wipe table data"
        sqlite3 "${SQLITE_DATABASE_PATH}" "DELETE FROM Certificates WHERE account = '${ACCOUNT}' AND region = '${REGION}';"
    fi

    __xx_notify "Fetching ACM certificates for account: ${ACCOUNT}, region: ${REGION}"

    sqlite3 "${SQLITE_DATABASE_PATH}" "DELETE FROM Certificates WHERE account = '${ACCOUNT}' AND region = '${REGION}';"

    aws acm list-certificates --output json 2>/dev/null | \
        jq -r '.CertificateSummaryList[] | [.CertificateArn, .DomainName, .Status, .Type, (.InUse | tostring)] | @tsv' | \
        while IFS=$'\t' read -r CERTIFICATE_ARN DOMAIN_NAME CERT_STATUS CERT_TYPE IN_USE; do
            CERTIFICATE_ARN_ESCAPED=$(echo "${CERTIFICATE_ARN}" | sed "s/'/''/g")
            DOMAIN_NAME_ESCAPED=$(echo "${DOMAIN_NAME}" | sed "s/'/''/g")
            CERT_STATUS_ESCAPED=$(echo "${CERT_STATUS}" | sed "s/'/''/g")
            CERT_TYPE_ESCAPED=$(echo "${CERT_TYPE}" | sed "s/'/''/g")
            IN_USE_ESCAPED=$(echo "${IN_USE}" | sed "s/'/''/g")
            sqlite3 "${SQLITE_DATABASE_PATH}" "INSERT OR REPLACE INTO Certificates (account, region, certificate_arn, domain_name, cert_status, cert_type, in_use) VALUES ('${ACCOUNT}', '${REGION}', '${CERTIFICATE_ARN_ESCAPED}', '${DOMAIN_NAME_ESCAPED}', '${CERT_STATUS_ESCAPED}', '${CERT_TYPE_ESCAPED}', '${IN_USE_ESCAPED}');"
        done

    __xx_notify "Creating 'SyncLog' table if not exists in SQLITE database"
    SYNC_TIMESTAMP=$(${XX_GNU_DATE_COMMAND} -u +"%Y-%m-%dT%H:%M:%SZ")
    sqlite3 "${SQLITE_DATABASE_PATH}" "INSERT OR REPLACE INTO SyncLog (account, region, sync_timestamp) VALUES ('${ACCOUNT}', '${REGION}', '${SYNC_TIMESTAMP}');"

    __xx_notify "#[fg=bold]Finished fetching AWS ACM Certificates!#[default]"
}
